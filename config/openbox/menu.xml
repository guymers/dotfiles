<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

  <menu id="apps-editors-menu" label="Editors">
    <item label="IntelliJ">
      <action name="Execute">
        <command>intellij-idea-ultimate-edition</command>
        <startupnotify>
          <enabled>yes</enabled>
        </startupnotify>
      </action>
    </item>
  </menu>

  <menu id="apps-net-menu" label="Internet">
    <item label="Firefox">
      <action name="Execute">
        <command>firefox</command>
        <startupnotify>
          <enabled>yes</enabled>
          <wmclass>Firefox</wmclass>
        </startupnotify>
      </action>
    </item>
    <item label="Chromium">
      <action name="Execute">
        <command>chromium</command>
        <startupnotify>
          <enabled>yes</enabled>
        </startupnotify>
      </action>
    </item>
  </menu>

  <menu id="apps-office-menu" label="Office">
    <item label="Calc">
      <action name="Execute">
        <command>libreoffice --calc</command>
      </action>
    </item>
    <item label="Math">
      <action name="Execute">
        <command>libreoffice --math</command>
      </action>
    </item>
    <item label="Writer">
      <action name="Execute">
        <command>libreoffice --writer</command>
      </action>
    </item>
  </menu>

  <menu id="apps-multimedia-menu" label="Multimedia">
    <item label="Music">
      <action name="Execute">
        <command>gmpc</command>
        <startupnotify>
          <enabled>yes</enabled>
        </startupnotify>
      </action>
    </item>
  </menu>

  <menu id="system-menu" label="System">
    <item label="Openbox Configuration Manager">
      <action name="Execute">
        <command>obconf</command>
        <startupnotify>
          <enabled>yes</enabled>
        </startupnotify>
      </action>
    </item>
    <item label="GTK Theme Manager">
      <action name="Execute">
        <command>lxappearance</command>
        <startupnotify>
          <enabled>yes</enabled>
        </startupnotify>
      </action>
    </item>
    <item label="PulseAudio">
      <action name="Execute">
        <command>pavucontrol</command>
        <startupnotify>
          <enabled>yes</enabled>
        </startupnotify>
      </action>
    </item>
    <item label="Reconfigure Openbox">
      <action name="Reconfigure"/>
    </item>
  </menu>

  <menu id="root-menu" label="Openbox 3">
    <item label="Term">
      <action name="Execute">
        <command>urxvt</command>
      </action>
    </item>
    <item label="Computer">
      <action name="Execute">
        <command>thunar</command>
        <startupnotify>
          <enabled>yes</enabled>
        </startupnotify>
      </action>
    </item>

    <menu id="apps-editors-menu"/>
    <menu id="apps-net-menu"/>
    <menu id="apps-office-menu"/>
    <menu id="apps-multimedia-menu"/>
    <menu id="system-menu"/>
    <separator />
    <item label="Log Out">
      <action name="Exit">
        <prompt>yes</prompt>
      </action>
    </item>
  </menu>

</openbox_menu>
